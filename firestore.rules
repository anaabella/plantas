
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /plants/{plantId} {
      // Permite que la app lea los datos incluso si el usuario aun no se ha logueado.
      allow read: if true; 
      
      // Mantiene la seguridad para que solo los due√±os editen sus plantas.
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    match /users/{userId}/wishlist/{wishlistItemId} {
       allow read, write: if isOwner(userId);
    }
  }
}
