
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /plants/{plantId} {
      // Permitir que cualquier usuario (autenticado o no) lea las plantas.
      allow read: if true;
      // Permitir crear solo si el ownerId coincide con el uid del solicitante.
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      // Permitir actualizar o borrar solo si el ownerId del documento existente coincide.
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    match /users/{userId}/wishlist/{wishlistItemId} {
       allow read, write: if isOwner(userId);
    }
  }
}
