
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /plants/{plantId} {
      // Permitir que cualquiera lea las plantas.
      allow read: if true;
      // Solo permitir crear, actualizar y borrar al due√±o autenticado.
      allow create, update, delete: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }

    match /users/{userId}/wishlist/{wishlistItemId} {
       allow read, write: if isOwner(userId);
    }
  }
}
