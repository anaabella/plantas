{
  "entities": {
    "Plant": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Plant",
      "type": "object",
      "description": "Represents a plant owned by a user.",
      "properties": {
        "name": { "type": "string", "description": "The name of the plant." },
        "image": { "type": "string", "description": "URL of the image of the plant.", "format": "uri" },
        "acquisitionType": { "type": "string", "enum": ["compra", "regalo", "intercambio", "robado"] },
        "exchangeSource": { "type": "string", "description": "Reason for exchange if applicable." },
        "price": { "type": "string", "description": "Price of the plant if purchased." },
        "date": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["viva", "fallecida", "intercambiada"] },
        "exchangeDest": { "type": "string", "description": "Destination of exchange if applicable." },
        "startType": { "type": "string", "enum": ["planta", "gajo", "raiz", "semilla"] },
        "location": { "type": "string", "enum": ["interior", "exterior"] },
        "lastWatered": { "type": "string", "format": "date" },
        "notes": { "type": "string" },
        "giftFrom": { "type": "string" },
        "stolenFrom": { "type": "string" },
        "lastPhotoUpdate": { "type": "string", "format": "date" },
        "createdAt": { "type": "string", "format": "date-time" },
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "date": { "type": "string", "format": "date" },
              "note": { "type": "string" }
            },
            "required": ["id", "type", "date", "note"]
          }
        }
      },
      "required": ["name", "date", "status", "createdAt"]
    },
    "WishlistItem": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "WishlistItem",
        "type": "object",
        "description": "Represents an item in the user's wishlist.",
        "properties": {
            "name": { "type": "string" },
            "notes": { "type": "string" },
            "image": { "type": "string", "format": "uri" }
        },
        "required": ["name"]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        }
      },
      "required": [
        "id"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
       {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles. Accessible only by the authenticated user."
        }
      },
      {
        "path": "/users/{userId}/plants/{plantId}",
        "definition": {
          "entityName": "Plant",
          "schema": {
            "$ref": "#/backend/entities/Plant"
          },
          "description": "Stores plants owned by a specific user."
        }
      },
      {
        "path": "/users/{userId}/wishlist/{wishlistItemId}",
        "definition": {
          "entityName": "WishlistItem",
          "schema": {
            "$ref": "#/backend/entities/WishlistItem"
          },
          "description": "Stores wishlist items for a specific user."
        }
      }
    ]
  }
}
